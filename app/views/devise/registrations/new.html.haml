%section
  = devise_error_messages!
.row
  .col-xs-12.col-sm-8.col-md-6.col-sm-offset-2.col-md-offset-3
    = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form'}) do |f|
      %h2
        Please Sign Up
        %small It's free and always will be.
      %hr.colorgraph
      .row
        .col-xs-12.col-sm-6.col-md-6
          .form-group
            = f.text_field :first_name, :autofocus => true, class: 'form-control input-lg', :placeholder => "First Name", :tabindex => "1", required: true
        .col-xs-12.col-sm-6.col-md-6
          .form-group
            = f.text_field :last_name, class: 'form-control input-lg', :placeholder => "Last Name", :tabindex => "2", required: true
      .form-group
        = f.email_field :email, class: 'form-control input-lg', :placeholder => "Email Address", :tabindex => "4", id: 'email', required: true
      .row
        .col-xs-12.col-sm-6.col-md-6
          .form-group
            = f.password_field :password, class: 'form-control input-lg', placeholder: "Password", tabindex: '5', id: 'password', required: true
        .col-xs-12.col-sm-6.col-md-6
          .form-group
            = f.password_field :password_confirmation, class: 'form-control input-lg', placeholder: "Confirm Password", tabindex: '6', id: 'password_confirmation', required: true
      .row
        .col-xs-4.col-sm-3.col-md-3
          %span.button-checkbox
            %button.btn#t_and_c_agree{"data-color" => "info", :tabindex => "7", :type => "button"} I Agree
            = f.check_box :t_and_c, class: "hidden", id: "t_and_c"
        .col-xs-8.col-sm-9.col-md-9
          By clicking
          %strong.label.label-primary Register
          , you agree to the
          = link_to 'Terms and Conditions', '#', data: {target: "#t_and_c_m", toggle: "modal"}  
          set out by this site, including our Cookie Use.
      %hr.colorgraph
      .row
        .col-xs-12.col-md-6
          = f.submit "Register", class: 'btn btn-primary btn-block btn-lg disabled', tabindex: '7', id: 'register'
        .col-xs-12.col-md-6
          =link_to "Sign in", new_user_session_path, class: "btn btn-success btn-block btn-lg"

