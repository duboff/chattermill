<form {{action "submit" on="submit"}} {{bind-attr class=formClass}}>
  {{yield}}

  {{#unless noButton}}
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button type='submit' class='btn btn-block btn-info'>{{buttonLabel}}</button>
      </div>
    </div>
  {{/unless}}
</form>
